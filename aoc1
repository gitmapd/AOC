        "  calories_elf = []\n",
        "  sums = 0\n",
        "  for elf in data:\n",
        "    if elf == \"\":\n",
        "      calories_elf.append(sums)\n",
        "      sums = 0\n",
        "    else:\n",
        "      sums += int(elf)\n",
        "  print(max(calories_elf))\n",
